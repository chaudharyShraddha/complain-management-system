
<!--Heading-->
    <div class="container">
        <div class="row">
            <h2>User Specific Complians</h2>
            <a href="/dashboard" data-toggle="tooltip" title="Back"><i class="fas fa-backward fa-3x" style="margin-top:15px;margin-left: 450px"></i></a>
       </div>
    </div>
    <hr>

  <h2>User name: {{user.name}} </h2> 
   <div class="media">
    <div class="media-left">
      <img src="/avatar.png" class="media-object" style="width:60px">
    </div>
    <div class="media-body">
      <h4 class="media-heading">Type: {{user.type}}</h4>
      <p>email: {{user.email}}</p>
    </div>
  </div>
  <hr>
  <h3>complains</h3>
 <div class="panel-group" id="accordion">
   {{#each data}}
   <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#{{this.id}}"><b>Title of complain:</b> {{this.title}}</a>
        </h4>
      </div>
      <div id="{{this.id}}" class="panel-collapse collapse">
        <div class="panel-body">
          <h4><b>ID: </b> {{this.id}}</h4>
          <p><b>Status: </b>{{this.status}}</p>
          <p><b>Officer: </b>{{this.officer}}</p>
          <p><b>Body of complin: </b>{{this.complain}}</p>
          <a href="/reject/{{this.id}}" class="btn btn-danger float-right" style="margin-left: 30px" onclick="return alert('Complain is Successfully Rejected')">Reject</a>
          <a href="/approve/{{this.id}}" class="btn btn-success float-right" onclick="return alert('Complain is Successfully Approved')">Approve</a>
        </div>
      </div>
    </div>
    {{/each}}
 </div>

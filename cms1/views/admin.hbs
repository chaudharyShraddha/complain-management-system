
    <!--Heading-->
    <div class="container">
        <div class="row">
            <h2>Welcome to complain Management System</h2>
            <a href="/logout" data-toggle="tooltip" title="Logout"><img src="/logout.png" alt="logout button" style="margin-top:15px;margin-left: 250px;max-height:45px"></a>
       </div>
    </div>
    <hr>

<div class="container bootstrap snippet">
    <div class="row">
  		<div class="col-sm-10">
            <h1 style="text-transform:uppercase;margin-left:10px">{{user.name}}</h1>
        </div>
    </div>
    <!--Left side-->
    <div class="row">
  		<div class="col-sm-3">  
            <!--user details-->
            <div class="panel panel-info">
                <div class="panel-heading">
                    <i class="fas fa-user-friends"></i> User Details
                </div>
                <div class="panel-body">
                    <p>{{user.email}}<br>
                    <b>Type:</b> {{user.type}}</hp>
                </div>          
            </div>
             <!--Activity-->
			<ul class="list-group">
            <li class="list-group-item text-muted">Activity <i class="fa fa-dashboard fa-1x"></i></li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Posts</strong></span> 37</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Followers</strong></span> 78</li>
          </ul>      
            <!--Contact-->
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <i class="fas fa-phone"></i> Contact Us
                </div>
                <div class="panel-body">
            	    <strong>1800-256-256</strong>
                </div>
            </div>
        </div>
        
        <!--Main menu-->
    	<div class="col-sm-9">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#home">New Entry</a></li>
                <li><a data-toggle="tab" href="#messages"> view Complains</a></li>
            </ul>

            <!--New complains-->             
            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <h2>Add new Entry</h2><hr>                        
                    <div class="form-group">                          
                        <div class="col-xs-10">
                           <form action="/newEntry" method="POST">
                           {{> partials}}
                                    <div class="form-group">
                                        <label for="comment">Type of user</label>
                                        <select class="form-control" id="sel1" style="height: 35px;" name="type">
                                                <option>admin</option>
                                                <option>normal</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="name">Name</label>
                                        <input type="text" name="name" class="form-control" placeholder="Enter name" value={{name}}>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Email Address</label>
                                        <input type="email" name="email" class="form-control" placeholder="Enter email" value={{email}}>
                                    </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Password</label>
                                        <input type="password" name="password" class="form-control" placeholder="Enter password" value={{password}}>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Confirm Password</label>
                                        <input type="password" name="password2" class="form-control" placeholder="Confirm password" value={{password}}>
                                    </div>
                                </div>  
                                   
                                    <button type="submit" class="btn btn-dark float-left"  style="width: 120px;height:40px;margin:12px"><i class="fas fa-plus"></i>submit</button>
                                    <a href="/dashboard" class="btn btn-secondary float-left"  style="width: 120px;height:40px;margin:12px"><i class="fas fa-eraser"></i> Clear</a>
                            </form>       
                        </div>
                    </div>
                </div>  

                
                <div class="tab-pane" id="messages">
                    <h2>Total Complains</h2><hr>                        
                    <div class="form-group">                          
                        <div class="col-xs-12 table-responsive">
                            <table class="table table-hover">
                                <thead class="thead-dark">
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Type</th>
                                    <th>Complain</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody class="thead-light">
                                    {{#each data}}
                                    <tr>                                        
                                        <td>{{this.name}}</td>
                                        <td>{{this.email}}</td>
                                        <td>{{this.type}}</td>
                                        <td><a href="/complains/{{this.id}}"class="btn btn-info">Complains </a></td>
                                        <td>
                                            <a href="/del/{{this.id}}"><i class="fas fa-trash-alt fa-lg" aria-hidden="true" onclick="return confirm('Are you sure to delete this User?')"></i></a>&nbsp;
                                        </td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

        </div>         

</div>            
</form> 

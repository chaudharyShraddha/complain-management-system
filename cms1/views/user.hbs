
    <!--Heading-->
    <div class="container">
        <div class="row">
            <h2>Welcome to complain Management System</h2>
            <a href="/logout" data-toggle="tooltip" title="Logout"><img src="/logout.png" alt="logout button" style="margin-top:15px;margin-left: 250px;max-height:45px"></a>
       </div>
    </div>
    <hr>

<div class="container bootstrap snippet">
    <div class="row">
  		<div class="col-sm-10">
            <h1 style="text-transform:uppercase;margin-left:10px">{{user.name}}</h1>
        </div>
    </div>
    <!--Left side-->
    <div class="row">
  		<div class="col-sm-3">  
            <!--user details-->
            <div class="panel panel-info">
                <div class="panel-heading">
                    <i class="fas fa-user-friends"></i> User Details
                </div>
                <div class="panel-body">
                    <p>{{user.email}}<br>
                    <b>Type:</b> {{user.type}}</hp>
                </div>          
            </div>
             <!--Activity-->
			<ul class="list-group">
            <li class="list-group-item text-muted">Activity <i class="fa fa-dashboard fa-1x"></i></li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Total Complains</strong></span><span class="badge"> {{user.complains.length}}</span></li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Posts</strong></span> 37</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Followers</strong></span> 78</li>
          </ul>      
            <!--Contact-->
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <i class="fas fa-phone"></i> Contact Us
                </div>
                <div class="panel-body">
            	    <strong>1800-256-256</strong>
                </div>
            </div>
        </div>
        
        <!--Main menu-->
    	<div class="col-sm-9">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#home">New complain</a></li>
                <li><a data-toggle="tab" href="#messages"> view Complains</a></li>
            </ul>

            <!--New complains-->             
            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <h2>{{title}}</h2><hr>                        
                    <div class="form-group">                          
                        <div class="col-xs-10">
                           <form action="/complain" method="POST">
                           {{> partials}}
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <input type="hidden" value="{{data._id}}" name="compId">
                                        <label>Title of Complain</label>
                                        <input type="text" name="title" class="form-control" placeholder="complain's title" value={{data.title}}>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="sel1">Officer Name</label>
                                            <select class="form-control" id="sel1" style="height: 35px;" name="officer">
                                                <option>M R Chaudhary</option>
                                                <option>Sharad Mehta</option>
                                                <option>Riya Panchal</option>
                                                <option>M D Gohil</option>
                                            </select>
                                    </div>
                                </div>  
                                    <div class="form-group">
                                        <label for="comment">Complain details</label>
                                        <textarea class="form-control" rows="5" name="complain" placeholder="Describe your complain">{{data.complain}}</textarea>
                                    </div>
                                    <button type="submit" class="btn btn-dark float-left"  style="width: 120px;height:40px;margin:12px"><i class="fas fa-plus"></i> {{submit}}</button>
                                    <a class="btn btn-secondary float-left"  style="width: 120px;height:40px;margin:12px" href="/dashboard"><i class="fas fa-eraser"></i> Clear</a>
                            </form>       
                        </div>
                    </div>
                </div>  

                
                <div class="tab-pane" id="messages">
                    <h2>Total Complains</h2><hr>                        
                    <div class="form-group">                          
                        <div class="col-xs-12 table-responsive">
                            <table class="table table-hover">
                                <thead class="thead-dark">
                                <tr>
                                    <th>Title</th>
                                    <th>Officer</th>
                                    <th>Complain</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody class="thead-light">
                                    {{#each user.complains}}
                                    <tr>
                                        <td>{{this.title}}</td>
                                        <td>{{this.officer}}</td>
                                        <td>{{this.complain}}</td>
                                        <td>{{this.status}}</td>
                                        <td>
                                            <a href="/delete/{{this.id}}"><i class="fas fa-trash-alt fa-lg" aria-hidden="true" onclick="return confirm('Are you sure to delete this complain?')"></i></a>&nbsp;
                                            <a href="/update/{{this._id}}"><i class="fas fa-pencil-alt fa-lg" aria-hidden="true"></i></a>
                                        </td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            

        </div>

            

</div>            
</form> 
